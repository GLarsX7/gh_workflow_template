# ==============================================================================
# FLAKE8 CONFIGURATION
# ==============================================================================
# Flake8 does not support pyproject.toml, so this separate config is required.
# Patterns synchronized with other tools for consistency.
# ==============================================================================

[flake8]
max-line-length = 127
max-complexity = 10

# Error codes to always catch (syntax errors, undefined names)
select = E9,F63,F7,F82

# Extend with standard style checks
extend-select = E,W,F

# Ignore rules handled by other tools
extend-ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (black handles this)

# Files and directories to exclude
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    node_modules,
    .pytest_cache,
    .mypy_cache,
    *.egg-info,
    .tox,

# Count errors
count = True
statistics = True
show-source = True

# Per-file ignores
per-file-ignores =
    __init__.py:F401